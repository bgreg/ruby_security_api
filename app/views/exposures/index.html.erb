<h1>Listing exposures</h1>

<table>
  <thead>
    <tr>
      <th>Summary</th>
      <th>Published</th>
      <th>Cvss severity</th>
      <th>Title</th>
      <th>Cvss v2 base scroe</th>
      <th>Impact subscore</th>
      <th>Exploitability subscore</th>
      <th>Access vector</th>
      <th>Access complexity</th>
      <th>Authentication</th>
      <th>Impact type</th>
      <th>Web link</th>
      <th>External source organization</th>
      <th>External source name</th>
      <th>External source link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exposures.each do |exposure| %>
      <tr>
        <td><%= exposure.summary %></td>
        <td><%= exposure.published %></td>
        <td><%= exposure.cvss_severity %></td>
        <td><%= exposure.title %></td>
        <td><%= exposure.cvss_v2_base_scroe %></td>
        <td><%= exposure.impact_subscore %></td>
        <td><%= exposure.exploitability_subscore %></td>
        <td><%= exposure.access_vector %></td>
        <td><%= exposure.access_complexity %></td>
        <td><%= exposure.authentication %></td>
        <td><%= exposure.impact_type %></td>
        <td><%= exposure.web_link %></td>
        <td><%= exposure.external_source_organization %></td>
        <td><%= exposure.external_source_name %></td>
        <td><%= exposure.external_source_link %></td>
        <td><%= link_to 'Show', exposure %></td>
        <td><%= link_to 'Edit', edit_exposure_path(exposure) %></td>
        <td><%= link_to 'Destroy', exposure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

